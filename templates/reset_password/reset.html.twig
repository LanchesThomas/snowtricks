
{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<style>
    .register-wrapper {
        height: 75vh;
        display: flex;
        align-items: center;
        flex-direction: column;
    }

    body {
        max-height: 100svh;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
